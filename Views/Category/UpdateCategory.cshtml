@model GameBlog.Models.Category

@{
    ViewData["Title"] = "UpdateCategory";
}
<h2>Kategori Güncelle</h2>
<br/>
<form method="POST">
    <div class="form-group">
        <label for="exampleInputEmail1">Kategori ID</label>
        @Html.TextBoxFor(x => x.CategoryID,new { @class="form-control", @readonly = "readonly"})
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Kategori Adı</label>
        @Html.TextBoxFor(x => x.CategoryName,new { @class="form-control"})
    </div>

  <button class="btn btn-info">Güncelle</button>
</form>